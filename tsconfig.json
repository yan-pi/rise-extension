{
  "compilerOptions": {
    "strict": true,
    "module": "es6",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "typeRoots": [ "node_modules/@types" ],
    "moduleResolution": "node",
    "lib": ["es6", "dom"]
  },
  "include": [
    "src/**/*"
  ]
}