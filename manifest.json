{
  "manifest_version": 2,
  "name": "Auto Registration Bot",
  "version": "1.0",
  "description": "Automated registration for betting platforms",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/content.js",
        "services/FormFiller.js",
        "utils/Util.js"
      ]
    }
  ]
}